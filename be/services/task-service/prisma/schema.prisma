generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TaskStatus {
  todo
  in_progress
  done
}

model Task {
  id          String     @id @default(uuid())
  userId      String
  title       String
  description String?
  status      TaskStatus @default(todo)
  priority    Int        @default(autoincrement())
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}
